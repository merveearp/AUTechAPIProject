@model List<ResultAboutItemDto>

@{
    ViewData["Title"] = "Hakkımızda Maddeleri";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-heading mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h3 class="fw-bold mb-1">Hakkımızda İçerikleri</h3>
            <p class="text-muted mb-0">Hakkımızda alanında gösterilecek maddeleri yönetin</p>
        </div>

        <a href="/Admin/AboutItem/CreateItem" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Yeni Item Ekle
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info mb-0">
                Henüz eklenmiş bir içerik bulunmamaktadır.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:80px;">#</th>
                            <th>Başlık</th>
                            <th style="width:160px;" class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@item.Id</td>
                                <td>@item.Title</td>
                                <td class="text-end">
                                    <a href="/Admin/AboutItem/UpdateItem/@item.Id"
                                       class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <a href="/Admin/AboutItem/DeleteItem/@item.Id"
                                       onclick="return confirm('Bu içeriği silmek istediğinize emin misiniz?')"
                                       class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

    </div>
</div>
