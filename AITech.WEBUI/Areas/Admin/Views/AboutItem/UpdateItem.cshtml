@model UpdateAboutItemDto

@{
    ViewData["Title"] = "Hakkımızda İçeriği Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-heading mb-4">
    <h3 class="fw-bold mb-1">Hakkımızda İçeriği Güncelle</h3>
    <p class="text-muted mb-0">Seçili içeriğin başlığını düzenleyebilirsiniz</p>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-body">

                <form asp-action="UpdateItem" asp-controller="AboutItem" asp-area="Admin" method="post">

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Başlık</label>
                        <input asp-for="Title"
                               class="form-control"
                               placeholder="Başlığı güncelleyin" />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-1"></i> Güncelle
                        </button>

                        <a href="/Admin/AboutItem"
                           class="btn btn-outline-secondary">
                            Vazgeç
                        </a>
                    </div>

                </form>

            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h6 class="fw-semibold mb-2">Bilgi</h6>
                <p class="text-muted small mb-0">
                    Burada yapılan değişiklikler, web sitesindeki
                    <strong>Hakkımızda</strong> alanına anında yansır.
                </p>
            </div>
        </div>
    </div>
</div>
