@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-heading mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h3 class="fw-bold">Kategoriler</h3>
        <a href="/Admin/Category/CreateCategory"
           class="btn btn-primary btn-sm">
            + Yeni Kategori
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:80px">#</th>
                    <th>Kategori Adı</th>
                    <th style="width:180px" class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-muted">@item.Id</td>
                            <td class="fw-semibold">@item.Name</td>
                            <td class="text-end">
                                <a href="/Admin/Category/UpdateCategory/@item.Id"
                                   class="btn btn-info btn-sm me-1">
                                    Güncelle
                                </a>

                                <button class="btn btn-danger btn-sm"
                                        onclick="confirmDelete(@item.Id)">
                                    Sil
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">
                            Henüz kategori bulunmuyor.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'Emin misin?',
            text: 'Bu kategori projelere bağlı olabilir. Silersen ilişkili veriler etkilenebilir.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, sil',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/Admin/Category/DeleteCategory/${id}`;
            }
        });
    }
</script>
