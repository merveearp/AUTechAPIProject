@model CreateChooseItemDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="page-heading mb-4">
    <h3 class="fw-bold mb-1">Yeni Item İçeriği</h3>
    <p class="text-muted mb-0">Öne Çıkan alanında gösterilecek yeni maddeyi ekleyin</p>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-body">

                <form asp-action="Create" asp-controller="ChooseItem" asp-area="Admin" method="post">

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Başlık</label>
                        <input asp-for="Item"
                               class="form-control"
                               placeholder="Örn: Yapay Zeka Destekli Çözümler" />
                        <span asp-validation-for="Item" class="text-danger small"></span>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i> Kaydet
                        </button>

                        <a href="/Admin/ChooseItem"
                           class="btn btn-outline-secondary">
                            Vazgeç
                        </a>
                    </div>

                </form>

            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h6 class="fw-semibold mb-2">Bilgilendirme</h6>
                <p class="text-muted small mb-0">
                    Buraya eklenen başlıklar, web sitesindeki
                    <strong>Choose</strong> alanında madde olarak gösterilecektir.
                </p>
            </div>
        </div>
    </div>
</div>
