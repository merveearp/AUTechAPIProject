@model UpdateContactDto
@{
    ViewData["Title"] = "İletişim Bilgilerini Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-1">İletişim Bilgileri</h3>
                    <p class="text-muted mb-0">
                        Anasayfa ve footer’da gösterilecek iletişim bilgilerini buradan güncelleyebilirsiniz.
                    </p>
                </div>

                <div>
                    <a href="/Admin/Contact/Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i>
                        Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

   
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Update" method="post">
                     
                        <input type="hidden" asp-for="Id" />

                        <h6 class="fw-semibold mb-3 text-primary">
                            İletişim Bilgileri
                        </h6>

                       
                        <div class="mb-3">
                            <label class="form-label fw-semibold">E-posta Adresi</label>
                            <input asp-for="Email"
                                   type="email"
                                   class="form-control"
                                   placeholder="info@firma.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                       
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Telefon</label>
                            <input asp-for="Phone"
                                   class="form-control"
                                   placeholder="+90 (5xx) xxx xx xx" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Adres</label>
                            <textarea asp-for="Adress"
                                      rows="3"
                                      class="form-control"
                                      placeholder="Firma adresi"></textarea>
                            <span asp-validation-for="Adress" class="text-danger small"></span>
                        </div>

                       
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i>
                                Güncelle
                            </button>

                            <a href="/Admin/Contact/Index"
                               class="btn btn-outline-secondary">
                                Vazgeç
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
