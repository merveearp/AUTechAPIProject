@model UpdateFeatureDto

@{
    ViewData["Title"] = "Hizmet Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">


    <div class="row mb-4">
        <div class="col-12">
            <h3 class="fw-bold mb-1">Hizmet Güncelle</h3>
            <p class="text-muted">
                Seçilen hizmet bilgilerini buradan güncelleyebilirsiniz.
            </p>
        </div>
    </div>

    <div class="row">


        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="UpdateFeature" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="Id" />


                        <div class="mb-3">
                            <label class="form-label fw-semibold">Başlık</label>
                            <input asp-for="Title"
                                   class="form-control"
                                   placeholder="Hizmet başlığı" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>


                        <div class="mb-3">
                            <label class="form-label fw-semibold">Açıklama</label>
                            <textarea asp-for="Description"
                                      rows="4"
                                      class="form-control"
                                      placeholder="Hizmet açıklaması"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>


                        <div class="mb-3">
                            <label class="form-label fw-semibold">Icon (FontAwesome)</label>
                            <input asp-for="Icon"
                                   id="iconInput"
                                   class="form-control"
                                   placeholder="fa fa-robot" />
                            <span asp-validation-for="Icon" class="text-danger small"></span>
                        </div>


                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Geri Dön
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-pencil-square"></i> Güncelle
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">

                    <h6 class="fw-semibold mb-3">Icon Önizleme</h6>

                    <div class="display-4 mb-3">
                        <i id="iconPreview" class="@Model.Icon"></i>
                    </div>

                    <p class="text-muted small mb-0">
                        Icon class değiştirildiğinde önizleme otomatik güncellenir.
                    </p>

                </div>
            </div>
        </div>

    </div>
</div>


    <script>
        const iconInput = document.getElementById("iconInput");
        const iconPreview = document.getElementById("iconPreview");

        iconInput.addEventListener("input", function () {
            iconPreview.className = this.value;
        });
    </script>

