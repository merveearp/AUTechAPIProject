@{
    ViewData["Title"] = "Gemini AI (Admin)";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h3 class="mb-3">🤖 Gemini AI – Admin</h3>

    <div class="card">
        <div class="card-body">

            <label class="form-label fw-semibold">Gemini’ye Yaz</label>
            <textarea id="adminPrompt"
                      class="form-control"
                      rows="4"
                      placeholder="Sorunuzu yazın..."></textarea>

            <button class="btn btn-primary mt-3" id="sendAdminPrompt">
                Gönder
            </button>

            <hr />

            <div id="adminAnswer" class="mt-3">
                <span class="text-muted">Henüz cevap yok.</span>
            </div>

        </div>
    </div>
</div>

<script>
    document.getElementById("sendAdminPrompt").addEventListener("click", function () {

        const input = document.getElementById("adminPrompt");
        const answerBox = document.getElementById("adminAnswer");

        const message = input.value.trim();
        if (message === "") return;

       
        answerBox.innerHTML = `
            <div class="alert alert-secondary">
                Gemini düşünüyor...
            </div>
        `;

        fetch("/Admin/Gemini/Index", {
            method: "POST",
            headers: {
                "Content-Type": "application/x-www-form-urlencoded"
            },
            body: "prompt=" + encodeURIComponent(message)
        })
        .then(res => res.json())
        .then(data => {
            answerBox.innerHTML = `
                <div class="alert alert-info">
                    ${data.answer}
                </div>
            `;
        })
        .catch(err => {
            answerBox.innerHTML = `
                <div class="alert alert-danger">
                    Bir hata oluştu.
                </div>
            `;
            console.error(err);
        });
    });
</script>
