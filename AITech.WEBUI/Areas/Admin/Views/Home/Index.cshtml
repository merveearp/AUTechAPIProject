@model List<ResultUserMessageDto>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<header class="mb-3">
    <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
    </a>
</header>

<div class="page-heading mb-4">
    <h3>Yönetim Paneli</h3>
</div>

<div class="col-12 col-lg-3">
    <div class="profile-card">
        <div class="profile-avatar">
            <img src="~/ADMIN/dist/assets/images/faces/1.jpg" alt="Profil">
        </div>
        <div class="profile-info">
            <h5 class="profile-name">John Duck</h5>
            <p class="profile-role">Yönetici</p>
        </div>
        <div class="profile-stats">
            <div class="profile-stat-item">
                <span class="profile-stat-value">@Model.Count</span>
                <span class="profile-stat-label">Mesaj</span>
            </div>
            <div class="profile-stat-item">
                <span class="profile-stat-value">@Model.Count(x => !x.IsCalled)</span>
                <span class="profile-stat-label">Bekleyen</span>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid px-3">
    <div class="row">
        <div class="col-12">

            <div class="card shadow border-0">
              
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div class="d-flex align-items-center gap-3">
                        <i class="bi bi-chat-dots-fill fs-3"></i>
                        <div>
                            <h5 class="mb-0">Kullanıcı Mesajları</h5>
                            <small>Gelen mesajları yönetin</small>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <span class="badge bg-warning text-dark px-3 py-2">
                            Bekleyen: @Model.Count(x => !x.IsCalled)
                        </span>
                        <span class="badge bg-success px-3 py-2">
                            Tamamlanan: @Model.Count(x => x.IsCalled)
                        </span>
                    </div>
                </div>


                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0 w-100">
                            <thead class="table-light">
                                <tr>
                                    <th>Ad Soyad</th>
                                    <th>İletişim</th>
                                    <th>Mesaj</th>
                                    <th>Durum</th>
                                    <th>Mesaj Tarihi</th>
                                    <th>Geri Dönüş</th>
                                    <th class="text-center">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="fw-semibold">
                                            @item.FullName
                                        </td>

                                        <td>
                                            <div class="small">@item.Email</div>
                                            <div class="small text-muted">@item.Phone</div>
                                        </td>

                                        <td style="max-width:500px; white-space:normal;">
                                            @item.Message
                                        </td>

                                        <td>
                                            @if (item.IsCalled)
                                            {
                                                <span class="badge bg-success">Görüşme Yapıldı</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Beklemede</span>
                                            }
                                    </td>

                                    <td>
                                        @item.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                    </td>

                                    <td>
                                        @(item.UpdatedDate != null
                                                                                ? item.UpdatedDate.Value.ToString("dd.MM.yyyy HH:mm")
                                                                                : "-")
                                        </td>

                                        <td class="text-center">
                                            @if (!item.IsCalled)
                                            {
                                                <form asp-action="Update" method="post" class="d-inline">
                                                    <input type="hidden" name="Id" value="@item.Id" />
                                                    <input type="hidden" name="IsCalled" value="true" />
                                                    <button class="btn btn-sm btn-success">
                                                        Geri Dönüş Yap
                                                    </button>
                                                </form>
                                            }
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-primary ms-1"
                                                    onclick="openMessageDetail(@item.Id)">
                                                Detay
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>


<div id="modalContainer"></div>

<script>
    function openMessageDetail(id) {
        fetch(`/Admin/Home/GetMessageDetail?id=${id}`)
            .then(res => res.text())
            .then(html => {
                document.getElementById("modalContainer").innerHTML = html;
                new bootstrap.Modal(
                    document.getElementById("messageDetailModal")
                ).show();
            });
    }
</script>


