@model CreateProjectDto

@{
    ViewData["Title"] = "Yeni Proje Oluştur";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">


    <div class="row mb-4">
        <div class="col-12">
            <h3 class="fw-bold mb-1">Yeni Proje Oluştur</h3>
            <p class="text-muted">
                Yeni bir proje eklemek için aşağıdaki formu doldurun.
            </p>
        </div>
    </div>

    <div class="row">


        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">

                    <form asp-action="CreateProject" method="post">
                        @Html.AntiForgeryToken()


                        <div class="mb-3">
                            <label class="form-label fw-semibold">Proje Başlığı</label>
                            <input asp-for="Title"
                                   class="form-control"
                                   placeholder="Proje başlığını giriniz" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>


                        <div class="mb-3">
                            <label class="form-label fw-semibold">Açıklama</label>
                            <textarea asp-for="Description"
                                      rows="4"
                                      class="form-control"
                                      placeholder="Proje açıklaması"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>


                        <div class="mb-3">
                            <label class="form-label fw-semibold">Proje Görseli (URL)</label>
                            <input asp-for="ImageUrl"
                                   id="imageUrlInput"
                                   class="form-control"
                                   placeholder="https://..." />
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                        </div>


                        <div class="mb-3">
                            <label class="form-label fw-semibold">Proje Kategorisi</label>
                            <select asp-for="CategoryId"
                                    asp-items="ViewBag.categories"
                                    class="form-select">
                                <option value="">Kategori Seçiniz</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>


                        <div class="mb-3 form-check form-switch">
                            <input class="form-check-input"
                                   type="checkbox"
                                   asp-for="IsActive"
                                   checked />
                            <label class="form-check-label fw-semibold">
                                Aktif
                            </label>
                        </div>


                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Kaydet
                            </button>

                            <a asp-action="Index"
                               class="btn btn-outline-secondary">
                                Vazgeç
                            </a>
                        </div>

                    </form>

                </div>
            </div>
        </div>


        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">

                    <h6 class="fw-semibold mb-3">Görsel Önizleme</h6>

                    <img id="imagePreview"
                         src="/img/placeholder.png"
                         class="img-fluid rounded border mb-3"
                         style="max-height:240px; object-fit:cover;"
                         onerror="this.src='/img/placeholder.png'" />

                    <span class="badge bg-success">Aktif</span>

                    <p class="text-muted small mt-2">
                        Görsel URL girdikçe otomatik önizleme yapılır.
                    </p>

                </div>
            </div>
        </div>

    </div>
</div>


    <script>
        const imageInput = document.getElementById("imageUrlInput");
        const imagePreview = document.getElementById("imagePreview");

        imageInput.addEventListener("input", function () {
            if (this.value && this.value.trim() !== "") {
                imagePreview.src = this.value;
            } else {
                imagePreview.src = "/img/placeholder.png";
            }
        });
    </script>

