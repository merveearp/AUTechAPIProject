@model List<ResultProjectDto>

@{
    ViewData["Title"] = "Projeler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-heading mb-4 d-flex justify-content-between align-items-center">
    <h3 class="fw-bold">Projeler</h3>
    <a href="/Admin/Project/CreateProject" class="btn btn-primary btn-sm">
        + Yeni Proje
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:60px">#</th>
                    <th>Proje</th>
                    <th>Açıklama</th>
                    <th style="width:160px">Kategori</th>
                    <th style="width:160px" class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    var index = 0;
                    foreach (var item in Model)
                    {
                        index++;
                        <tr>
                            <td class="text-muted">@index</td>

                           
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <img src="@item.ImageUrl"
                                         style="width:45px;height:45px;object-fit:cover;border-radius:50%" />
                                    <span class="fw-semibold">@item.Title</span>
                                </div>
                            </td>

                            
                            <td class="text-muted small">
                                @(item.Description.Length > 120
                                                        ? item.Description.Substring(0, 120) + "..."
                                                        : item.Description)
                            </td>

                          
                            <td>
                                <span class="badge bg-secondary">
                                    @item.Category.Name
                                </span>
                            </td>

                           
                            <td class="text-end">
                                <a href="/Admin/Project/UpdateProject/@item.Id"
                                   class="btn btn-info btn-sm me-1">
                                    Güncelle
                                </a>

                                <button class="btn btn-danger btn-sm"
                                        onclick="confirmDelete(@item.Id)">
                                    Sil
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">
                            Henüz proje bulunmuyor.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'Emin misin?',
            text: 'Bu proje kategori ve diğer içeriklere bağlı olabilir. Silme işlemi geri alınamaz.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, sil',
            cancelButtonText: 'Vazgeç'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/Admin/Project/DeleteProject/${id}`;
            }
        });
    }
</script>
