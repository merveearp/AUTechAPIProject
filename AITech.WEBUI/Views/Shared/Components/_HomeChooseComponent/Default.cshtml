@using AITech.WEBUI.DTOs.ChooseDtos
@model ResultChooseDto
@*
    _HomeChooseViewComponent
*@
<div class="container-fluid bg-primary feature pt-5 position-relative overflow-hidden">

    <div class="position-absolute top-0 start-0 w-100 h-100" style="opacity: 0.05;">
        <div class="position-absolute rounded-circle bg-white" style="width: 300px; height: 300px; top: -100px; right: -50px;"></div>
        <div class="position-absolute rounded-circle bg-white" style="width: 200px; height: 200px; bottom: -50px; left: -30px;"></div>
    </div>

    <div class="container pt-5 position-relative">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6 mb-md-5 pb-md-5 wow fadeIn" data-wow-delay="0.3s">

                <div class="d-inline-flex align-items-center btn btn-sm border rounded-pill text-white px-4 py-2 mb-4 shadow-sm"
                     style="background: rgba(255, 255, 255, 0.15); backdrop-filter: blur(10px);">
                    <i class="fas fa-rocket me-2"></i>
                    <span class="fw-semibold">İşinizi Geleceğe Taşıyan Çözümler</span>
                </div>


                <h1 class="text-white mb-4 display-4 fw-bold" style="line-height: 1.2;">
                    @Model.Title
                </h1>


                <p class="text-light mb-4 fs-5 opacity-90" style="line-height: 1.8;">
                    @Model.Description
                </p>


                <div class="mt-4">
                    @await Component.InvokeAsync("_HomeChooseItemComponent")
                </div>
            </div>


            <div class="col-lg-6 text-center text-md-end wow fadeIn" data-wow-delay="0.5s">
                <div class="position-relative d-inline-block">

                    <div class="position-absolute w-100 h-100 bg-white rounded-4 shadow-lg"
                         style="top: 20px; left: 20px; opacity: 0.1; z-index: 0;"></div>


                    <img class="img-fluid rounded-4 shadow-lg position-relative"
                         src="@Url.Content(Model.ImageUrl)"
                         alt="@Model.Title"
                         style="z-index: 1; max-height: 500px; object-fit: cover;" />


                    <div class="position-absolute" style="bottom: -30px; right: -30px; z-index: 0;">
                        <div class="d-grid gap-2" style="grid-template-columns: repeat(4, 10px);">
                            @for (int i = 0; i < 16; i++)
                            {
                                <div class="rounded-circle bg-white" style="width: 10px; height: 10px; opacity: 0.4;"></div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="position-absolute bottom-0 start-0 w-100" style="height: 100px; overflow: hidden;">
        <svg class="w-100 h-100" viewBox="0 0 1200 120" preserveAspectRatio="none">
            <path d="M0,0 C150,50 350,0 600,30 C850,60 1050,30 1200,50 L1200,120 L0,120 Z"
                  fill="rgba(255,255,255,0.05)"></path>
        </svg>
    </div>
</div>

<style>
    .feature {
        background: linear-gradient(135deg, var(--bs-primary) 0%, #0056b3 100%);
        min-height: 600px;
    }

        .feature img {
            transition: transform 0.4s ease, box-shadow 0.4s ease;
        }

            .feature img:hover {
                transform: translateY(-10px) scale(1.02);
                box-shadow: 0 20px 40px rgba(0,0,0,0.3) !important;
            }

    
        .feature {
            min-height: auto;
        }

        .display-4 {
            font-size: 2rem !important;
        }
    
</style>