@using AITech.WEBUI.DTOs.FAQDtos
@model List<ResultFAQDto>
@*
    _HomeFAQComponent
*@

<div id="faq"  class="container-fluid py-5">
    <div class="container py-5">
        <div class="mx-auto text-center wow fadeIn" data-wow-delay="0.1s" style="max-width: 500px;">
            <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">
                Sıkça Sorulan Sorular
            </div>
            <h1 class="mb-4">Merak Ettikleriniz</h1>
        </div>

        <div class="row">

            
            <div class="col-lg-6">
                <div class="accordion" id="accordionFAQ1">
                    @for (int i = 0; i < Model.Count; i += 2)
                    {
                        <div class="accordion-item wow fadeIn" data-wow-delay="0.@(i + 1)s">
                            <h2 class="accordion-header" id="heading@(i)">
                                <button class="accordion-button collapsed"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#collapse@(i)"
                                        aria-expanded="false"
                                        aria-controls="collapse@(i)">
                                    @Model[i].Question
                                </button>
                            </h2>
                            <div id="collapse@(i)"
                                 class="accordion-collapse collapse"
                                 aria-labelledby="heading@(i)"
                                 data-bs-parent="#accordionFAQ1">
                                <div class="accordion-body">
                                    @Html.Raw(Model[i].Answer)
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

         
            <div class="col-lg-6">
                <div class="accordion" id="accordionFAQ2">
                    @for (int i = 1; i < Model.Count; i += 2)
                    {
                        <div class="accordion-item wow fadeIn" data-wow-delay="0.@(i + 1)s">
                            <h2 class="accordion-header" id="heading@(i)">
                                <button class="accordion-button collapsed"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#collapse@(i)"
                                        aria-expanded="false"
                                        aria-controls="collapse@(i)">
                                    @Model[i].Question
                                </button>
                            </h2>
                            <div id="collapse@(i)"
                                 class="accordion-collapse collapse"
                                 aria-labelledby="heading@(i)"
                                 data-bs-parent="#accordionFAQ2">
                                <div class="accordion-body">
                                    @Html.Raw(Model[i].Answer)
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
