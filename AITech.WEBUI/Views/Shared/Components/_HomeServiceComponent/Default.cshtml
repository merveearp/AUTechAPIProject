@using AITech.WEBUI.DTOs.FeatureDtos
@model List<ResultFeatureDto>
@*
    _HomeServiceViewComponent
*@

<div id="service" class="container-fluid bg-light mt-5 py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">

           
            <div class="col-lg-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">
                    Hizmetlerimiz
                </div>
                <h1 class="mb-4">İşiniz İçin Üstün Yapay Zekâ Çözümleri</h1>
                <p class="mb-4">
                    Yapay zekâ teknolojilerini iş ihtiyaçlarınıza özel olarak uyarlayarak ölçülebilir ve sürdürülebilir çözümler sunuyoruz.
                    Otomasyon, veri analitiği ve akıllı sistemler ile operasyonel verimliliğinizi artırıyor,
                    rekabet avantajı kazanmanıza yardımcı oluyoruz.
                </p>
            </div>


            <div class="col-lg-7">
                <div class="row g-4">

                    <div class="col-md-6">
                        <div class="row g-4">
                            @for (int i = 0; i < Model.Count && i < 2; i++)
                            {
                                <div class="col-12 wow fadeIn" data-wow-delay="0.@(i + 1)s">
                                    <div class="service-item d-flex flex-column justify-content-center text-center rounded">
                                        <div class="service-icon btn-square">
                                            <i class="@Model[i].Icon fa-2x"></i>
                                        </div>
                                        <h5 class="mb-3">@Model[i].Title</h5>
                                        <p>@Model[i].Description</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>


                    <div class="col-md-6 pt-md-4">
                        <div class="row g-4">
                            @for (int i = 2; i < Model.Count && i < 4; i++)
                            {
                                <div class="col-12 wow fadeIn" data-wow-delay="0.@(i + 1)s">
                                    <div class="service-item d-flex flex-column justify-content-center text-center rounded">
                                        <div class="service-icon btn-square">
                                            <i class="@Model[i].Icon fa-2x"></i>
                                        </div>
                                        <h5 class="mb-3">@Model[i].Title</h5>
                                        <p>@Model[i].Description</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
