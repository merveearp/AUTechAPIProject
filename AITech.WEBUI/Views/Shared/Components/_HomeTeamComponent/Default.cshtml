@using AITech.WEBUI.DTOs.TeamWorkersDtos
@model List<ResultTeamWorkerDto>

<div class="container-fluid bg-light py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">


            <div class="col-lg-5 wow fadeIn" data-wow-delay="0.1s">
                <div class="btn btn-sm border rounded-pill text-primary px-3 mb-3">
                    Ekibimiz
                </div>
                <h1 class="mb-4">Deneyimli Ekibimizle Tanışın</h1>
                <p class="mb-4">
                    Alanında uzman, deneyimli ve çözüm odaklı ekibimizle
                    projelerinize değer katıyor, sürdürülebilir ve yenilikçi
                    çözümler üretiyoruz.
                </p>
            </div>


            <div class="col-lg-7">
                <div class="row g-4">

                    @{
                        int index = 0;
                    }

                    @foreach (var item in Model)
                    {
                        bool isRightColumn = index % 2 == 1;

                        <div class="col-md-6 @(isRightColumn ? "pt-md-4" : "")">
                            <div class="row g-4">
                                <div class="col-12 wow fadeIn"
                                     data-wow-delay="@(0.1 + (index * 0.1))s">
                                    <div class="team-item bg-white text-center rounded p-4 pt-0">
                                        <img class="img-fluid rounded-circle p-4"
                                             src="@(string.IsNullOrEmpty(item.ImageUrl)
                                                                                                 ? "/images/default-user.png"
                                                                                                 : item.ImageUrl)"
                                             alt="@item.FullName">
                                        <h5 class="mb-0">@item.FullName</h5>
                                        <small>@item.Title</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        index++;
                    }

                </div>
            </div>

        </div>
    </div>
</div>
