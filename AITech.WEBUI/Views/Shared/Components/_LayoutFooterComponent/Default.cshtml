@*
    _LayoutFooterComponent
*@
<div class="footer-wrapper">
    <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5">
        <div class="container-fluid px-4 py-5">
            <div class="row g-5">
                <!-- Logo ve Açıklama -->
                <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.1s">
                    <a href="/" class="d-inline-block mb-3 text-decoration-none">
                        <h1 class="text-white mb-0">AI<span class="text-primary">.</span>Tech</h1>
                    </a>
                    <p class="mb-0 mt-3" style="line-height: 1.8;">
                        Yapay zeka ve teknoloji alanında yenilikçi çözümler sunarak işletmelerin dijital dönüşüm yolculuğunda güvenilir partneri oluyoruz.
                    </p>
                </div>

                <!-- İletişim Bilgileri -->
                <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.3s">
                    <h5 class="text-white mb-4 fw-bold">İletişim</h5>

                @await Component.InvokeAsync("_LayoutContactComponent")

                    <!-- Sosyal Medya -->
                    <div class="mt-4">
                        <h6 class="text-white mb-3">Bizi Takip Edin</h6>
                        @await Component.InvokeAsync("_HomeSocialComponent")
                    </div>
                </div>

                <!-- Hızlı Linkler -->
                <div class="col-md-6 col-lg-3 wow fadeIn" data-wow-delay="0.5s">
                    <h5 class="text-white mb-4 fw-bold">Hızlı Linkler</h5>
                    <div class="d-flex flex-column">
                        <a class="btn btn-link text-white-50 ps-0" href="#about">
                            <i class="fas fa-angle-right me-2"></i>Hakkımızda
                        </a>
                        <a class="btn btn-link text-white-50 ps-0" href="#project">
                            <i class="fas fa-angle-right me-2"></i>Çalışmalarımız
                        </a>
                        <a class="btn btn-link text-white-50 ps-0" href="#service">
                            <i class="fas fa-angle-right me-2"></i>Hizmetlerimiz
                        </a>
                    </div>
                </div>

                <!-- Hizmetler -->
                @await Component.InvokeAsync("_LayoutServiceComponent")
            </div>
        </div>

        <!-- Copyright -->
        <div class="container-fluid px-4 wow fadeIn" data-wow-delay="0.1s">
            <div class="copyright border-top border-secondary pt-4">
                <div class="row">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        <span class="text-white-50">
                            &copy; <span id="currentYear"></span>
                            <a class="border-bottom text-white" href="/">AI.Tech</a>.
                            Tüm hakları saklıdır.
                        </span>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <span class="text-white-50">
                            Tasarım:
                            <a class="border-bottom text-white" href="https://github.com/merveturk" target="_blank">Merve Türk</a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* HTML ve Body için temel ayarlar */
    html, body {
        width: 100%;
        max-width: 100%;
        overflow-x: hidden !important;
        margin: 0;
        padding: 0;
    }

    
    .footer-wrapper {
        width: 100vw;
        margin: 0;
        padding: 0;
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
    }

    
    .footer {
        background: linear-gradient(to bottom, #1a1a2e 0%, #0f0f1e 100%);
        position: relative;
        width: 100vw;
        margin: 0 !important;
        padding-left: 0 !important;
        padding-right: 0 !important;
        box-sizing: border-box;
    }

   
    .footer::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(to right, transparent, rgba(13, 110, 253, 0.5), transparent);
    }

   
    .footer .btn-link {
        padding: 0.5rem 0;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .footer .btn-link:hover {
        color: #ffffff !important;
        padding-left: 0.5rem !important;
    }

    .footer .btn-link i {
        transition: transform 0.3s ease;
    }

    .footer .btn-link:hover i {
        transform: translateX(5px);
    }

    /* Copyright stilleri */
    .copyright {
        padding-bottom: 2rem;
    }

    .copyright a {
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .copyright a:hover {
        color: var(--bs-primary) !important;
        border-bottom-color: var(--bs-primary) !important;
    }

    /* İkon rengi */
    .footer .fa {
        color: var(--bs-primary);
    }

    /* Başlık alt çizgisi */
    .footer h5::after {
        content: '';
        display: block;
        width: 50px;
        height: 2px;
        background: var(--bs-primary);
        margin-top: 0.75rem;
    }

    /* Container override - kenarları kaldır */
    .footer .container-fluid {
        max-width: 100%;
        padding-left: 0 !important;
        padding-right: 0 !important;
        margin-left: 0 !important;
        margin-right: 0 !important;
    }
    
    /* İçerik için padding */
    .footer .row {
        margin-left: 0;
        margin-right: 0;
        padding-left: 2rem;
        padding-right: 2rem;
    }
</style>

<script>
    // Yıl güncelleme
    document.addEventListener('DOMContentLoaded', function() {
        const yearElement = document.getElementById('currentYear');
        if (yearElement) {
            yearElement.textContent = new Date().getFullYear();
        }
    });
</script>